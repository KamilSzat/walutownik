<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="walutownik.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Button
                x:Name="CounterBtn"
                Text="Zobacz kurs swojej waluty" 
                SemanticProperties.Hint="Counts the number of times you click"
                Clicked="OnCounterClicked"
                HorizontalOptions="Fill" />
            <Picker x:Name="picker"
                    Title="Wybierz walute">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>EUR</x:String>
                        <x:String>GBP</x:String>
                        <x:String>JNY</x:String>
                        <x:String>SEK</x:String>
                        <x:String>NOK</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>
            <Label x:Name="cLabel" Text=""/>
            <DatePicker x:Name="dpData" MinimumDate="2010-01-01">
            </DatePicker>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
